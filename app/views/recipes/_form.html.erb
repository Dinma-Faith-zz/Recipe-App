<%= form_with(model: recipe) do |form| %>
  <% if recipe.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
        <% recipe.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, required: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :preparation_time, style: "display: block" %>
    <%= form.text_field :preparation_time, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :cooking_time, style: "display: block" %>
    <%= form.text_field :cooking_time, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class: 'form-control', required: true %>
  </div>

  <div class="form-group form-check">
    <%= form.label :public, class: 'form-check-label' %>
    <%= form.check_box :public %>
  </div>

  <div class="form-group">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
