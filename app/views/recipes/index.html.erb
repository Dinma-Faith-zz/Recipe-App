<div id="recipe-page" class="container">
  <div class="header">
    <h1>Your Recipes</h1>
    <%= button_to "Add New Recipe", new_recipe_path, class: 'btn btn-success', method: :get %>
  </div>

  <div id="recipes">
    <% @recipes.each do |recipe| %>
    <%= link_to recipe_path(recipe[:id])  do %>
      <%= render recipe %>
    <% end %>
    <% end %>
  </div>
</div>