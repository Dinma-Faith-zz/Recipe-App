<div class="container-fluid">

<p style="color: green"><%= notice %></p>
  <div class="d-flex flex-column align-items-center width-20 mt-4">
    <%= link_to "Create a Recipe", new_user_recipe_path, class: "btn btn-success create" %>
  </div>
  <ul class="list-group list-unstyled">
  <% @recipes.each do |recipe| %>
    <li class="border border-1 border-secondary container mt-5 rounded bio">
      <div class="d-flex p-3">
        <div>
     <%= link_to recipe.name, user_recipe_path(@user, recipe.id) %>

          <div>
            <%if can? :destroy, recipe %> <%= button_to "Delete", recipe_path(recipe.id),
            method: :delete, class: "btn btn-outline-danger"%> <% end %>
          </div>
        </div>
        <div>
          <p class="px-5"><%= recipe.description%></p>
        </div>
      </div>

      <p>
     <%= link_to "New recipe", new_user_recipe_path %>
    </p>
    </li>
    <% end %>
  </ul>
</div>