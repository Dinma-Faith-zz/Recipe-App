<p style="color: green"><%= notice %></p>

<%= render @recipe %>

<div class="recipe-btn">
  <%= link_to "Edit this recipe", edit_recipe_path(@recipe), class: 'btn btn-primary' %>
  <%= link_to "Back to recipes", recipes_path, class: 'btn btn-outline-info' %>
  <%= button_to "Destroy this recipe", @recipe, method: :delete, class: "btn btn-danger" %>
</div>
