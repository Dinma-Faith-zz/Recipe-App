<p style="color: green"><%= notice %></p>

<div id="food-list-page" class="container">
<div class="d-flex justify-content-between align-items-center headline">
    <h1>Foods</h1>
    <%= link_to "New food", new_food_path, class: 'btn btn-outline-info' %>
</div>
  <table class="table">
    <thead>
        <tr>
        <th scope="col">Food</th>
        <th scope="col">Measurement Unit</th>
        <th scope="col">Price</th>
        <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% Food.all.each do |food| %>
        <tr>
            <td><%= food.name %></td>
            <td><%= food.measurement_unit %></td>
            <td><%= food.price %></td>
            <td>
            <%= button_to "Delete", food_path(food.id), method: :delete, class: "btn btn-danger" %>
            </td>
        </tr>
        <% end %>
    </tbody>
</div>
